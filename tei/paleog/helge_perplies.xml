            <div type="poem">
                <pb n="424r"/>
                <cb n="a"/>
                <lg n="1" xml:id="C1" type="stanza" rhyme="abcdabcdefefghgh">
                    <l><lb n="1"/><w><hi rend="initial red and blue" n="6">I</hi>ch</w><w>hab</w><w>mich</w><w><choice><orig>v</orig><reg>u</reg></choice>nderwund<choice><am>ē</am><ex>en</ex></choice></w><pc type="ms">·</pc></l>
